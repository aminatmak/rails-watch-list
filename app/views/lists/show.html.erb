<div>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @list.name %>
  </p>
  <%= link_to 'Add a new bookmark', new_list_bookmark_path(@list), class: "btn btn-primary my-3" %>
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
    <%= bookmark.comment %>
    <%= link_to 'Delete',
                bookmark_path(bookmark),
                method: :delete,
                class: 'btn btn-danger position-absolute eraser',
                data: { confirm: 'Do you want to delete this movie?'}
    %>
  <%# How to display the movies of this list? %>
  <%#= @list.movies %>

  </div>
  <%= link_to 'Back', lists_path, class: "btn btn-secondary" %>
</div>
