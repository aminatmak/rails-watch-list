<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1586170737458-fc02f1212f59?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2370&q=80);">
  <h1>New List</h1>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(@list) do |r| %>
        <%= r.error_notification %>
        <%= r.error_notification message: r.object.errors[:base].to_sentence if r.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= r.input :name %>
        </div>

        <div class="form-actions">
          <%= r.button :submit, class: "btn btn-success" %>
          <%= link_to 'Back', lists_path, class: "btn btn-secondary my-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
