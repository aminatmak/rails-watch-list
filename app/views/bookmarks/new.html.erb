<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1587986100063-d1c34ca3dc6b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2274&q=80);">
  <p id="notice"><%= notice %></p>
  <h1>New Bookmark</h1>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for([@list, @bookmark]) do |r| %>
        <div class="form-inputs">
          <%= r.association :movie %>
          <%= r.input :comment %>
        </div>

        <div class="form-actions">
          <%= r.button :submit, class: "btn btn-success mb-5" %>
          <%= link_to 'Back', lists_path(@list), class: "btn btn-secondary mb-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
