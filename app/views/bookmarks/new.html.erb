<h1>New Comment</h1>

<%= simple_form_for([@list, @bookmark]) do |r| %>
  <div class="form-inputs">
    <%= r.input :comment %>
    <%= r.association :movie %>
  </div>

  <div class="form-actions">
    <%= r.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
<%= link_to 'Back', lists_path(@list), class: "btn btn-secondary" %>
